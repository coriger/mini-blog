<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd
        ">

	<!-- 提供方应用信息，用于计算依赖关系 -->
	<!--<dubbo:application name="search" />-->

	<!-- 使用zookeeper注册中心暴露服务地址 -->
	<dubbo:registry protocol="zookeeper" address="192.168.19.31:2181" />

	<!-- 用dubbo协议在20880端口暴露服务 如果多个服务，
	     可以设置不同的端口号（同一台机上部署）或者部署在不同的机器上（端口相同IP不同）,
	     默认是随机访问进行软负载均衡
	-->
	<dubbo:protocol name="rmi" port="1099" />

	<!-- 声明需要暴露的服务接口 -->
	<dubbo:service interface="com.xiaozhi.blog.img.ImageService" ref="imageService" />


	<!-- 和本地bean一样实现服务 -->
	<bean id="imageService" class="com.xiaozhi.image.ImageServiceImpl" />




    <!-- 注册后监控中心才能进行监控 -->
    <!--<dubbo:monitor protocol="registry" /> -->

</beans>